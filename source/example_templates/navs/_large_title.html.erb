    style :links, %w(tc pb3)
    style :link, %w(link dim gray f6 f5-ns dib mr3)
    style :last_link, [link - "mr3"]
  end
%>

<nav class="<%= styles.container %>">
  <a class="<%= styles.title %>" href="#" title="Home">Site Name</a>
  <div class="<%= styles.links %>">
