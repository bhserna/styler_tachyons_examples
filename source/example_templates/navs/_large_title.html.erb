    <a class="<%= styles.link %>" href="#" title="About">About</a>
    <a class="<%= styles.link %>" href="#" title="Store">Store</a>
    <a class="<%= styles.last_link %>" href="#" title="Contact">Contact</a>
  </div>
</nav>
